<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="description" content="中国钢铁现货网 - 国内钢材的网上集散地" />
    <!--晶屏缩放等-->
    <meta content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0"
        name="viewport" />
    <!--禁用iphone默认的数字拨号功能-->
    <meta name="format-detection" content="telephone=no" />
    @*<link href="@Url.Content("http://192.168.1.13:8003/css/app_css.css")" rel="stylesheet" type="text/css" />*@
    <link href="@Url.Content("~/Content/css/app_css.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/js.js")" type="text/javascript"></script>
</head>
<body>
    <!-----头部  开始----->
    <header>
    <div class="header_tit">
              @if (@ViewBag.BackButton != false)
              {     <a class="header_return" href="@ViewBag.BackUrl"> <i class="icon_return"></i> </a>
              }
   <div class="sZoom">@ViewBag.ContentTitle</div>
         <div class="header_link">
            @if (@ViewBag.RightTop == "market")
            {
                <div class="header_link">
                  <select id="province_list" onchange="conditionchanged()">
                  <option value="0">请选择</option>
                  </select>
                </div>
            }
            else if (@ViewBag.RightTop == "help")
            {
                 <a class="link_login" href="Login/Index/@ViewBag.openid">登录</a>
            }
            else if (@ViewBag.RightTop == "login")
            {
                  <a class="link_register" href="/Register/Index/@TempData["openid"]">快速注册</a>
            }
            
            </div>
          </div>
    </header>
    <!-----头部  结束----->
    @RenderBody()
    <!-----底部  开始----->
    <footer>
    <p>
        触屏版 | <a href="@ViewBag.PCurl" target="_blank">电脑版</a>
    </p>
    <p>
        Copyright© 2006-2014中国钢铁现货网
    </p>
    </footer>
    <!-----底部  结束----->
    @*    <div style="float: left; width: 100%; text-align: center">
        <a href="SteelYieldly">钢厂资源列表</a> | <a href="login">绑定帐号</a> | <a href="market">钢铁超市</a>
        | <a href="market/detail">资源详细</a> | <a href="Opinion">钢为观点</a> | <a href="register">
            注册账号</a> | <a href="report">分析报告</a> | <a href="register/setpassport">设置密码</a> | <a href="GoodsSearch">
                帮我找货</a></div>*@
    <!------------公用右侧右侧 返回顶部 开始-------------->
    <div id="Online_Div">
        <a id='Online_Div_box3' title='去顶部' href='#'></a>
    </div>
    <!------------公用右侧右侧 返回顶部 结束------------>
    <!------------百度统计 开始------------>
    <script type="text/javascript">
        var _bdhmProtocol = (("https:" == document.location.protocol) ? " https://" : " http://");
        document.write(unescape("%3Cscript src='" + _bdhmProtocol + "hm.baidu.com/h.js%3F84dce9ab2c8bdf306b06c43c75b812d6' type='text/javascript'%3E%3C/script%3E"));
    </script>
    <!------------百度统计 结束------------>
</body>
</html>
